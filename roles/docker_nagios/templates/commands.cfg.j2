# 'check_local_procs' command definition
define command{
        command_name    check_local_procs
        command_line    $USER1$/check_procs -w $ARG1$ -c $ARG2$ -C $ARG3$
        }

# 'check_https' command definition
define command{
        command_name    check_https
        command_line    $USER1$/check_http -S -H $ARG1$ -u $ARG2$ --sni
        }

# 'check_certif' command definition
define command{
        command_name    check_certif
        command_line    $USER1$/custom/check_ssl_cert -H $ARG1$ -p $ARG2$ -w 7 -c 5
        }

# 'check_ssh_port' command definition
define command{
        command_name    check_ssh_port
        command_line    $USER1$/check_ssh -p $ARG1$ $HOSTADDRESS$
        }

